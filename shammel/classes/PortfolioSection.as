package shammel.classes{	import flash.display.*;	import flash.text.*;			public class PortfolioSection extends Sprite	{		private var txtField:TextField;		private var format:TextFormat;		private var leadingLetterSpacing:TextFormat;				public function PortfolioSection(prjData:Object, pSection:String):void		{			with(graphics)			{				lineStyle(prjData.categoryLineWeight, prjData.categoryLineColor, 1, true, "normal", "none");				moveTo(0,-prjData.padding);				lineTo(0,prjData.portfolioHeight);				lineStyle();				moveTo(0,0);				beginFill(0x0000FF, 0);				drawRect(0,-prjData.padding,60,prjData.portfolioHeight + prjData.padding);				endFill();			}						leadingLetterSpacing =					new TextFormat();			leadingLetterSpacing.leading =			prjData.textfieldLeading;			leadingLetterSpacing.letterSpacing =	prjData.textfieldLetterSpacing;									txtField =								new TextField();			format =								new TextFormat();			txtField.defaultTextFormat =			leadingLetterSpacing;			format.font =							"dieHaasNeueGrotesk";			format.color =							prjData.categoryFontColor;			format.size =							prjData.categoryFontSize;						//trace(format.font);						txtField.embedFonts =					true;			txtField.multiline =					false;			txtField.autoSize =						TextFieldAutoSize.LEFT;			//txtField.width =						this.width - prjData.textfieldLeftMargin;			//txtField.border = true;			txtField.wordWrap =						false;			txtField.selectable =					false;			txtField.antiAliasType = 				AntiAliasType.ADVANCED;			txtField.defaultTextFormat =			format;						txtField.text =							pSection;			txtField.x = 3;			txtField.y = prjData.portfolioHeight + 3;			txtField.rotation = -90;			addChild(txtField);		}	}}